{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib/",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "extends": "./tsconfig.paths.json"
}